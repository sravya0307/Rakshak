<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <Button
        android:id="@+id/btnviewmap"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:backgroundTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="View the Map"
        android:textSize="25sp"
        app:layout_constraintVertical_bias="0.2"
        />
    <Button
        android:id="@+id/btnupdatework"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:backgroundTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:text="Update Work Location"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/btnviewmap"
        />
    <Button
        android:id="@+id/btncontacts"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:backgroundTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:text="Update Emergency Contacts"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/btnupdatework"
        />


</androidx.constraintlayout.widget.ConstraintLayout>